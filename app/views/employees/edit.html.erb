<body class="employee-body">
<div class="text-center">
	<h1>Results</h1>
	<br>
</div

<div class="container">
<table class="table table-striped table-condensed table-hover table-responsive">
	<thead>
		<tr>
			<th>#</th>
			<th>Name</th>
			<th>Title</th>
			<th>Salary ($)</th>
			<th>Organization</th>
			<th>Year</th>
		</tr>
	</thead>
	<tbody>
		<% if @result != nil %>
			<% i = 0 %>
			<% @result.each do |row| %>
			<tr>
				<td><%= i += 1 %></td>
				<td><%=	row_name = row.name.split(',').join(', ')	%></td>
				<td><%= row.title %></td>
				<!-- display the salary with 2 decimal precision -->
				<td class="text-right"><%= sprintf '%.2f', row.salary %></td>
				<td><%= row.organization %></td>
				<td><%= row.year %></td>
			</tr>
			<% end %>
		<% end %>
	</tbody>
</table>
<div>

<div class="text-center">
	<button class="btn btn-default">
		<%= link_to 'Search again', '/index' %>
	</button>
</div>
</body>